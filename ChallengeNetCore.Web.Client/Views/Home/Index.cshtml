@model IEnumerable<ChallengeNetCore.Web.Models.PriceList>

@{
    ViewData["Title"] = "ChallengeNetCore";
}

<h1>Lista de Precios</h1>
<div class="container pt-3">
    <form method="post">
        @Html.TextBoxFor(i => i.FirstOrDefault().Price, new { @type = "number" })
        <button type="submit" class="btn btn-primary">Buscar presupuesto</button>
        <a href="Home/AddPriceList" class="btn btn-primary" role="button">Crear nuevo registro de lista de precios</a>
    </form>
</div>

<div class="container pt-3">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Producto</th>
                <th>Categoría</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pList in Model)
            {
                <tr>
                    <td>@pList.Id</td>
                    <td>@pList.Date.ToShortDateString()</td>
                    <td>@pList.Product.Name</td>
                    <td>@pList.Product.Category.Name</td>
                    <td>$ @pList.Price</td>

                </tr>
            }
        </tbody>
    </table>
</div>

